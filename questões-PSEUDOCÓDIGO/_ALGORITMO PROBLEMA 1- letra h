Início

  // Declaração de constantes
  Constante real taxa_USD <- 5.00;
  Constante real taxa_GBP <- 6.50;
  Constante real taxa_EUR <- 5.50;

  // Declaração de variáveis
  Real: orcamento_inicial;
  Real: gastos_USA_BRL;
  Real: gastos_UK_BRL;
  Real: gastos_FR_BRL;
  Real: saldo_final;
  Real: total_gastos ;

  // Entrada de dados
  Escreva("Digite o valor do orçamento em reais:");
  Leia(orcamento_inicial);

  // Processamento
  gastos_USA_BRL ← (1745 + 2350) * taxa_USD;
  gastos_UK_BRL ← 8500 * taxa_GBP;
  gastos_FR_BRL ← (120 + 380 + 250 + 750 + 3000) * taxa_EUR;

  total_gastos ← gastos_USA_BRL + gastos_UK_BRL + gastos_FR_BRL;
  saldo_final ← orcamento_inicial - total_gastos;

  // Saída de dados
  Escreva("Gastos nos Estados Unidos: ", gastos_USA_BRL);
  Escreva("Gastos no Reino Unido: ", gastos_UK_BRL);
  Escreva("Gastos na França: ", gastos_FR_BRL);
  Escreva("Total de gastos: ", total_gastos);
  Escreva("Saldo final restante: ", saldo_final);

Fim;
